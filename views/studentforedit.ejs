<%- include('./base/header.ejs') %>
    <div class="container">
        <div class="alert bg-success my-3">
            <h4 class="text-center" style="color: white;">EDIT Student</h4>

        </div>
    </div>
    <div class="container">
        <div class="conainer">
            <div class="col"></div>
            <div class="col">
                <form action="/edit/student/<%= student._id %>" method="post">
                    <div>
                        <label class="form-label">Roll No</label>
                        <input type="text" name="rollNo" value="<%= student.rollNO %>" class="form-control">
                    </div>

                    <div>
                        <label class="form-label">firstName</label>
                        <input type="text" name="firstName" value="<%= student.firstName %>" class="form-control">
                    </div>
                    <div>
                        <label class="form-label">lastName</label>
                        <input type="text" name="lastName" value="<%= student.lastName %>" class="form-control">
                    </div>
                    <div>
                        <label class="form-label">fatherName</label>
                        <input type="text" name="fatherName" value="<%= student.fatherName %>" class="form-control">
                    </div>
                    <div>
                        <label class="form-label">adharCardNo</label>
                        <input type="text" name="adharCardNo" value="<%= student.adharCardNo %>" class="form-control">
                    </div>
                    <div>
                        <label class="form-label">mobileNo</label>
                        <input type="text" name="mobileNo" value="<%= student.mobileNo %>" class="form-control">
                    </div>
                    <input type="submit" value="Edit Student" class="btn btn-warning w-100 my-3">

                </form>
            </div>
            <div class="col"></div>

        </div>
    </div>

    <%- include('./base/footer.ejs') %>